---
import { CldImage } from 'astro-cloudinary'
import { Icon } from 'astro-icon/components'

interface Props {
    title: string
    description: string
    imgUrl: string
    duration: string
}

const { title, description, imgUrl, duration } = Astro.props
---

<div 
    class="flex flex-col justify-self-center border border-[#242424] bg-[#1C1C1C] rounded-sm w-fit"
>
    <CldImage 
        src={imgUrl}
        height={234}
        alt="Blog Image"
        class="w-full"
    />
    <div
        class="p-4 flex flex-col justify-start"
    >
        <p class="text-sm font-semibold text-[#F6F6F6]">{title}</p>
        <p class="text-sm font-normal text-[#858585] mb-4">{description}</p>
        <div class="flex space-x-2 items-center">
            <Icon name="mingcute:time-line" class="text-white"/>
            <p class="text-sm text-[#858585] font-normal">{duration}</p>
        </div>
    </div>
</div>