---
interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: URL | string;
}

const {
  title,
  description,
  image = "/assets/blog-logo.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
} = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/assets/blog-logo.png" />
<meta name="generator" content={Astro.generator} />
<meta name="author" content="Mohamad Rafi Irfansyah" />
<meta name="keywords" content="Mohamad Rafi Irfansyah, Rafi Irfansyah, Software Developer, Web Developer" />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={Astro.url.pathname.startsWith("/blog/") ? "article" : "website"} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />
<meta property="og:site_name" content="rafirfansyah.site" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.site)} />
<meta property="twitter:creator" content="@mazrafihehe" />

<!-- Article Metadata for Blog Posts -->
{
  Astro.url.pathname.startsWith("/blog/") && (
    <meta property="article:published_time" content={new Date().toISOString()} />
  )
}