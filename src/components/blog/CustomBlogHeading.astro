---
interface Props {
    level: number
    children: string
}

const { level, children } = Astro.props
---
{level === 1 && (
    <h1 class="custom-h1">
        {children}
    </h1>
)}

{level === 2 && (
    <h2 class="custom-h2">
        {children}
    </h2>
)}

{level === 3 && (
    <h3 class="custom-h3">
        {children}
    </h3>
)}

{level === 4 && (
    <h4 class="custom-h4">
        {children}
    </h4>
)}

{level === 5 && (
    <h5 class="custom-h5">
        {children}
    </h5>
)}

<style>
    .custom-h1 {
        font-size: 3.052em;
        font-weight: 600;
        color: #ffffff;
        padding-left: 2.5rem;
        position: relative;
    }

    .custom-h2 {
        font-size: 2.441em;
        font-weight: 600;
        color: #ffffff;
        padding-left: 2.5rem;
        position: relative;
    }

    .custom-h3 {
        font-size: 1.953em;
        font-weight: 600;
        color: #ffffff;
        padding-left: 2.5rem;
        position: relative;
    }

    .custom-h4 {
        font-size: 1.563em;
        font-weight: 600;
        color: #ffffff;
        padding-left: 2.5rem;
        position: relative;
    }

    .custom-h5 {
        font-size: 1.25em;
        font-weight: 600;
        color: #ffffff;
        padding-left: 2.5rem;
        position: relative;
    }
</style>