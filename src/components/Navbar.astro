<nav class="flex justify-between px-20 py-6 border-b border-b-[#282828]">
    <ul class="flex space-x-6 text-white items-center">
        {['Home', 'About', 'Blog'].map((item, index) => {
            const link = item === 'Home' ? '/' : `/${item.toLowerCase()}`;
            const isActive = Astro.url.pathname === link;
            return (
                <li 
                    class={`text-sm font-normal px-3 py-2 rounded-xl cursor-pointer ${
                        isActive ? 'bg-[#1C1C1C]' : ''
                    }`}
                    tabindex={index}
                >
                    <a href={link}>{item}</a>
                </li>
            );
        })}
    </ul>
    <img 
        src="/assets/MMRI.svg"
        alt="Blog Logo"
    />
</nav>